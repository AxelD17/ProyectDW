
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/User/_LayoutPage1.cshtml";
}


    <div class="main-bg">
        <div class="logo">
            <img src="~/Content/img/logo-oficial-pazi-blanco.png" class="imgLogin" />
        </div>
        <div class="sub-main-w3">
            <!-- vertical tabs -->
            <div class="image-style"></div>
            <div class="vertical-tab">
                <div id="section1" class="section-w3ls">
                    <input type="radio" name="sections" id="option1" checked>
                    <label for="option1" class="icon-left-w3pvt"><span class="fa fa-user-circle" aria-hidden="true"></span>Iniciar Sesión</label>
                    <article>
                        <form action="Verify" method="post">
                            <h3 class="legend">Iniciar Sesión</h3>
                            <div class="input">
                                <span class="fa fa-envelope-o" aria-hidden="true"></span>
                                <input type="text" placeholder="Usuario o Correo" name="userName" required />
                            </div>
                            <div class="input">
                                <span class="fa fa-key" aria-hidden="true"></span>
                                <input type="password" placeholder="Contraseña" name="userPass" required />
                            </div>
                            <button type="submit" class="submit">ingresar</button>
                            <a href="#" class="bottom-text-w3ls">¿Olvido Contraseña?</a>
                        </form>
                    </article>
                </div>
                <div id="section2" class="section-w3ls">
                    <input type="radio" name="sections" id="option2">
                    <label for="option2" class="icon-left-w3pvt"><span class="fa fa-pencil-square" aria-hidden="true"></span>Registrarse</label>
                    <article>
                        <form action="#" method="post">
                            <h3 class="legend">Registrarse Aquí</h3>
                            <div class="input">
                                <span class="fa fa-user-o" aria-hidden="true"></span>
                                <input type="text" placeholder="Usuario o Correo" name="name" required />
                            </div>
                            <div class="input">
                                <span class="fa fa-key" aria-hidden="true"></span>
                                <input type="password" placeholder="Contraseña" name="password" required />
                            </div>
                            <div class="input">
                                <span class="fa fa-key" aria-hidden="true"></span>
                                <input type="password" placeholder="Confirmar Contraseña" name="password" required />
                            </div>
                            <button type="submit" class="submit">registrar</button>
                        </form>
                    </article>
                </div>
                <div id="section3" class="section-w3ls">
                    <input type="radio" name="sections" id="option3">
                    <label for="option3" class="icon-left-w3pvt"><span class="fa fa-lock" aria-hidden="true"></span>¿Olvido Contraseña?</label>
                    <article>
                        <form action="#" method="post">
                            <h3 class="legend last"></h3>
                            <p class="para-style">Ingrese su dirección de correo electrónico a continuación y le enviaremos un correo electrónico con instrucciones.</p>
                            <p class="para-style-2">¿Necesita ayuda?  Obtenga más información sobre cómo recuperar un existente cuenta.</p>
                            <div class="input">
                                <span class="fa fa-envelope-o" aria-hidden="true"></span>
                                <input type="email" placeholder="Correo" name="email" required />
                            </div>
                            <button type="submit" class="submit last-btn">enviar</button>
                        </form>
                    </article>
                </div>
            </div>
            <!-- //vertical tabs -->
            <div class="clear"></div>
        </div>
        <!-- copyright -->
        <div class="copyright">
            <h2>
                &copy; 2020. All rights reserved | Design by T5AC - CIBERTEC
            </h2>
        </div>
        <!-- //copyright -->
    </div>

